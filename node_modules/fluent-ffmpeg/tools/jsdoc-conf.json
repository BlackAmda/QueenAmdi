{
	"opts": {
		"recurse": true,
		"verbose": true,
		"destination": "doc",
		"template": "tools/jsdoc-template"
	},

	"source": {
		"include": ["README.md", "lib"],
		"excludePattern": "lib\/presets"
	},

	"plugins": [
		"plugins/markdown",
		"tools/jsdoc-aliases.js"
	],

	"markdown": {
		"parser": "evilstreak",
		"dialect": "Markuru"
	}
}